<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNoPatients"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_major"
        android:text="Список пациентов пуст"
        android:textSize="16sp"
        android:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewPatients"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_margin="@dimen/spacing_major"
        android:orientation="vertical" />

    <Button
        android:id="@+id/btnAddPatient"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/spacing_minor"
        android:text="Добавить пациента"
        android:textColor="@color/white" />

</LinearLayout>