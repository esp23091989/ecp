<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diaryRecordLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:elevation="2dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_major">

    <TextView
        android:id="@+id/tvDateDiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/spacing_minor"
        android:text="@string/title.diary.record.date"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/container_content_font_size" />


    <TextView
        android:id="@+id/tvDiaryRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDateDiary"
        android:layout_marginRight="@dimen/spacing_medium"
        android:maxLines="2"
        android:text="@string/title.diary.record"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/container_content_font_size"
        android:typeface="sans" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/blue_arrow" />

</RelativeLayout>



