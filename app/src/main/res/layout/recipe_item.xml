<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTitleRecept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="title"
            android:textColor="@color/textColorPrimary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewRecipeDoc"
            android:layout_alignStart="@+id/textViewRecipeDoc"
            android:layout_below="@+id/textViewDateRecipe"
            android:layout_marginTop="12dp"
            android:text="Дозировка:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewRecipeDosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/textView2"
            android:text="dosage"
            android:textColor="@color/textSecondaryPrimary" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="12dp"
            android:text="Количество:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:textColor="@color/textSecondaryPrimary" />

        <TextView
            android:id="@+id/textViewRecipeDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewTitleRecept"
            android:layout_alignStart="@+id/textViewTitleRecept"
            android:layout_below="@+id/textViewTitleRecept"
            android:layout_marginTop="12dp"
            android:text="New Text"
            android:textColor="@color/textSecondaryPrimary" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="12dp"
            android:text="Серия:"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="12dp"
            android:text="Номер:"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/textViewRecipeSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:text="Серия:" />

        <TextView
            android:id="@+id/textViewRecipeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewRecipeSeries"
            android:layout_alignStart="@+id/textViewRecipeSeries"
            android:layout_alignTop="@+id/textView4"
            android:text="New Text"
            android:textColor="@color/textSecondaryPrimary" />

        <TextView
            android:id="@+id/textViewDateRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textViewRecipeDoc"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:text="дата"
            android:textColor="@color/textSecondaryPrimary" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewDateRecipe"
            android:layout_alignBottom="@+id/textViewDateRecipe"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:text="Дата выписки рецепта:"
            android:textColor="@color/black" />
    </RelativeLayout>
</android.support.v7.widget.CardView>