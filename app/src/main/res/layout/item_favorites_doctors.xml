<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/mono_light_green_button_background"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="@dimen/spacing_major">

    <TextView
        android:id="@+id/item_favorites_doctors_fio"
        style="@style/text_view_title"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_favorites_doctors_speciality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:textColor="@color/textSecondaryPrimary"
        android:textSize="15sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/item_favorites_doctors_clinic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:textColor="@color/textSecondaryPrimary"
        android:textSize="15sp"
        android:typeface="sans" />
</LinearLayout>